{
  "manifest_version": 3,
  "name": "PIDM Integration",
  "version": "1.2",
  "description": "Send downloads to PIDM Download Manager.",
  "permissions": [
    "downloads",
    "contextMenus",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "PIDM",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["pidm_error.html"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}